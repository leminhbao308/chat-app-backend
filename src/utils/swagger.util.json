    "paths": {
        "/auth/register": {
            "post": {
                "tags": [
                    "Authentication"
                ],
                "summary": "Đăng ký tài khoản mới",
                "description": "API đăng ký tài khoản người dùng mới",
                "operationId": "register",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "parameters": [
                    {
                        "in": "body",
                        "name": "user",
                        "description": "Thông tin người dùng để đăng ký",
                        "required": true,
                        "schema": {
                            "type": "object",
                            "properties": {
                                "first_name": {
                                    "type": "string",
                                    "example": "New",
                                    "default": "New"
                                },
                                "last_name": {
                                    "type": "string",
                                    "example": "User",
                                    "default": "User"
                                },
                                "gender": {
                                    "type": "string",
                                    "enum": [
                                        "male",
                                        "female"
                                    ],
                                    "default": "male"
                                },
                                "date_of_birth": {
                                    "type": "string",
                                    "pattern": "^\\d{2}-\\d{2}-\\d{4}$",
                                    "example": "01-01-1999",
                                    "default": "01-01-1999"
                                },
                                "password": {
                                    "type": "string",
                                    "format": "password",
                                    "minLength": 8,
                                    "example": "Example@123",
                                    "description": "Mật khẩu phải chứa ít nhất một chữ hoa, một chữ thường, một số và một ký tự đặc biệt"
                                },
                                "avatar_url": {
                                    "type": "string",
                                    "format": "uri"
                                },
                                "thumbnail_url": {
                                    "type": "string",
                                    "format": "uri"
                                },
                                "phone_number": {
                                    "type": "string",
                                    "example": "0912345678",
                                    "description": "Số điện thoại theo định dạng hợp lệ"
                                }
                            },
                            "required": [
                                "password",
                                "phone_number"
                            ]
                        }
                    }
                ],
                "responses": {
                    "201": {
                        "description": "Đăng ký thành công",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "success": {
                                    "type": "boolean",
                                    "example": true
                                },
                                "describe": {
                                    "type": "string",
                                    "example": "Đăng ký thành công"
                                },
                                "status_code": {
                                    "type": "integer",
                                    "example": 201
                                },
                                "content": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "400": {
                        "description": "Dữ liệu không hợp lệ",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "success": {
                                    "type": "boolean",
                                    "example": false
                                },
                                "describe": {
                                    "type": "string",
                                    "example": "Request không hợp lệ"
                                },
                                "status_code": {
                                    "type": "integer",
                                    "example": 400
                                },
                                "content": {
                                    "type": "object"
                                }
                            }
                        }
                    },
                    "409": {
                        "description": "Số điện thoại đã được đăng ký",
                        "schema": {
                            "type": "object",
                            "properties": {
                                "success": {
                                    "type": "boolean",
                                    "example": false
                                },
                                "describe": {
                                    "type": "string",
                                    "example": "Số điện thoại đã được đăng ký"
                                },
                                "status_code": {
                                    "type": "integer",
                                    "example": 409
                                },
                                "content": {
                                    "type": "null"
                                }
                            }
                        }
                    }
                }
            }
        },
